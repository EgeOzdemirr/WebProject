@model CreateBrandDto
@{
    ViewData["Title"] = "CreateBrand";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Marka Ekleme Sayfası</h4>
                <br />
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="brandName">Marka Adı</label>
                        <input type="text" asp-for="BrandName" class="form-control" id="brandName" placeholder="Marka Adı">
                        <br />
                        <label for="brandImage">Marka Görseli</label>
                        <input type="text" asp-for="ImageUrl" class="form-control" id="brandImage"
                               value="/images/brandsImages/"
                               onfocus="moveCursorToEnd(this)">
                        <br />
                    </div>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
    function moveCursorToEnd(input) {
        // Input alanının değer uzunluğunu al
        const length = input.value.length;

        // İmleci metnin sonuna taşı
        input.setSelectionRange(length, length);

        // Input alanına odaklan
        input.focus();
    }
</script>
