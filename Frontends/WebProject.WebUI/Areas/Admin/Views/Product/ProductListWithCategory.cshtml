@model List<ResultProductWithCategoryDto>

@{
    ViewData["Title"] = "ProductListWithCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="col-md-12">
        <div class="chart-box">
            @* <h4>Ürün Listesi</h4>
            <p>Ürün ile ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz</p> *@
            <br />
            <div class="bs-example" data-example-id="bordered-table">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ürün Adı</th>
                            <th>Ürün Fiyatı</th>
                            <th>Kategori</th>
                            <th class="text-center">Açıklama ve Bilgi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.ProductName</td>
                                <td>@item.ProductPrice.ToString("#,###.#0")</td>
                                <td>@item.Category.CategoryName</td>
                                <td class="text-center"><a href="/Admin/ProductDetail/UpdateProductDetail/@item.ProductId" class="btn btn-info btn-sm">Açıklama ve Bilgi</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a href="/Admin/Product/CreateProduct/" class="btn btn-primary btn-sm">Yeni Ürün Ekle</a>
        </div>
    </div>
</section>